# Terraform variables - Copy to terraform.tfvars and customize
# cp terraform.tfvars.example terraform.tfvars

# AWS Region (ap-northeast-1 = Tokyo, us-west-2 = Oregon, eu-west-1 = Ireland)
aws_region = "ap-northeast-1"

# Instance type (t3.xlarge = 4 vCPU, 16GB for production; t3.large = 2 vCPU, 8GB for testing)
instance_type = "t3.large"

# Number of worker instances
instance_count = 1

# Your SSH key pair name (must exist in AWS EC2 console)
# Create one at: AWS Console > EC2 > Key Pairs > Create key pair
key_name = "your-key-name"

# Restrict SSH access to your IP for security
# Find your IP: curl ifconfig.me
# Format: "YOUR_IP/32" for single IP, or "0.0.0.0/0" for any (not recommended)
allowed_ssh_cidr = "0.0.0.0/0"

# Project name for resource tagging
project_name = "axon-worker"
